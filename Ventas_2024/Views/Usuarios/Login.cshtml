@model Usuario;



<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body bg-success p-2  p-md-5" style="--bs-bg-opacity:.5;">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-light mb-5 mx-1 mx-md-4 mt-4 fst-italic ">Inicio de sesion</p>

                            <form method="post" class="mx-1 mx-md-4">

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" asp-for="User" class="form-control" />
                                        <label class="form-label">Usuario</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" asp-for="Password" class="form-control" />
                                        <label class="form-label">Contraseña</label>
                                    </div>
                                </div>

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" asp-for="MantenerActivo" /> Recordar sesion
                                    </label>

                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn-lg btn-dark">Ingresar</button>
                                    <label class="alert-danger">@ViewBag.Error</label>
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                            <img width="400" height="400" src="https://i.pinimg.com/564x/2b/32/92/2b32921be10989a8011522c7fb9e5346.jpg" class="img-fluid" alt="Pez">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
