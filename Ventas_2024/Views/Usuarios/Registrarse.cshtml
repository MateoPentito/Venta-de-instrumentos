@model Usuario;

<h1>@ViewData["Registro"]</h1>


<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
            <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body bg-warning p-2 p-md-5" style="--bs-bg-opacity:.5;">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                            <p class="text-center h1 fw-light mb-5 mx-1 mx-md-4 mt-4 fst-italic ">Registro de usuario</p>

                            <form method="post" class="mx-1 mx-md-4">

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" asp-for="Nombre" class="form-control" />
                                        <label class="form-label">Nombre</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" asp-for="Apellido" class="form-control" />
                                        <label class="form-label">Apellido</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="date" asp-for="Fecha_Nacimiento" class="form-control" />
                                        <label class="form-label">Fecha de nacimiento</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <!--EL ASP-FOR SIEMPRE TIENE QUE ESTAR EN EL INPUT-->
                                        <input type="email" asp-for="Correo" class="form-control" />
                                        <label class="form-label">Correo</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="text" class="form-control" asp-for="User" />
                                        <label class="form-label">Usuario</label>
                                    </div>
                                </div>

                                <div class="d-flex flex-row align-items-center mb-4">
                                    <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                    <div class="form-outline flex-fill mb-0">
                                        <input type="password" asp-for="Password" class="form-control" />
                                        <label class="form-label">Contraseña</label>
                                    </div>
                                </div>


                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" asp-controller="Usuarios" asp-action="Registrarse" class="btn btn-dark btn-lg">Registrarse</button>
                                </div>

                            </form>

                        </div>
                        <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                            <img width="400" height="400" src="https://i.pinimg.com/564x/dc/9d/5e/dc9d5ef4102fe98c560c268cbdfb8e3c.jpg" class="img-fluid" alt="Arpa">

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
