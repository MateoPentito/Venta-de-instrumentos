@model Compra;
<h1>@ViewData["COMPRA"]</h1>


<body class="bg-body-tertiary">


    <main>
        <div class="container">



            <div class="py-5 text-center">
                <img class="d-block mx-auto mb-4" src="data:image/png;base64," alt="">
                <h2><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Formulario de pago</font></font></h2>
                <p class="lead"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">A continuación se muestra un formulario para poder realizar tu compra.</font></font></p>
            </div>

            <hr class="my-4">




            <div class="py-5 text-center">

                <h4 class="mb-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Confirmacion de la compra</font></font></h4>

                <form method="post" class="needs-validation">

                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nombre</font></font></label>
                            <input type="text" id="firstName" asp-for="Nombre" asp-controller="Productos" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Se requiere un nombre válido.
                                    </font>
                                </font>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label for="lastName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Apellido</font></font></label>
                            <input type="text" id="lastName" asp-for="Apellido" asp-controller="Productos"  class="form-control" />
                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Se requiere un apellido válido.
                                    </font>
                                </font>
                            </div>
                        </div>
                        
                        <div class="row g-3">
                        <div class="col-sm-6">
                        <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Producto</font></font></label>
                        <input type="text" id="firstName" asp-for="NombreProducto" asp-controller="Productos" class="form-control" />

                        <div class="invalid-feedback">
                        <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                        Se requiere un nombre válido.
                        </font>
                        </font>
                        </div>
                        </div>




                        <div class="col-sm-6">
                                <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Precio del producto</font></font></label>

                                <input type="text" id="lastName" asp-for="PrecioProducto" asp-controller="Productos" class="form-control" />
                        <div class="invalid-feedback">
                        <font style="vertical-align: inherit;">
                        <font style="vertical-align: inherit;">
                        Se requiere un apellido válido.
                        </font>
                        </font>
                        </div>
                        </div>
                       

                        <div class="col-12">
                            <label for="username" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nombre de usuario</font></font></label>
                            <div class="input-group has-validation">
                                <span class="input-group-text"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></span>
                                <input type="text" asp-for="Usuario" asp-controller="Productos" id="cc-name" class="form-control" />
                                <div class="invalid-feedback">
                                    <font style="vertical-align: inherit;">
                                        <font style="vertical-align: inherit;">
                                            Su nombre de usuario es requerido.
                                        </font>
                                    </font>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="email" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Correo </font></font><span class="text-body-secondary"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></span></label>
                            <input type="email" id="email" asp-for="Correo" asp-controller="Productos" class="form-control" />
                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Ingrese una dirección de correo electrónico válida para recibir actualizaciones de envío.
                                    </font>
                                </font>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Domicilio</font></font></label>
                            <input type="text" asp-for="Domicilio" asp-controller="Productos" id="Direccion" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Por favor introduzca su direccion de envio.
                                    </font>
                                </font>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Numero</font></font></label>
                            <input type="text" asp-for="Numero" asp-controller="Productos" id="Numero" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Por favor introduzca su numero de envio.
                                    </font>
                                </font>
                            </div>
                        </div>


                        <div class="col-sm-6">
                            <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Pais</font></font></label>

                            <input type="text" asp-for="Pais" asp-controller="Productos" id="Pais" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Por favor introduzca su pais.
                                    </font>
                                </font>
                            </div>
                        </div>




                        <div class="col-sm-6">
                            <label for="firstName" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Provincia</font></font></label>
                            <input type="text" asp-for="Provincia" asp-controller="Productos" id="Provincia" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Por favor introduzca su provincia
                                    </font>
                                </font>
                            </div>
                        </div>

                        



                    </div>

                    <hr class="my-4">

                    <h4 class="mb-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Pago</font></font></h4>



                    <div class="col-12">
                        <label for="username" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Medio de pago</font></font></label>
                        <div class="input-group has-validation">
                            <span class="input-group-text"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font></span>
                            <input type="text" asp-for="MedioDePago" asp-controller="Productos" id="Provincia" class="form-control" />
                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Su nombre de usuario es requerido.
                                    </font>
                                </font>
                            </div>
                        </div>
                    </div>




                    <div class="row gy-3">
                        <div class="col-md-6">
                            <label for="cc-name" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Nombre en la tarjeta</font></font></label>
                            <input type="text" asp-for="NombreTarjeta" asp-controller="Productos" id="cc-name" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Se requiere el nombre en la tarjeta
                                    </font>
                                </font>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label for="cc-number" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Número de Tarjeta</font></font></label>
                            <input type="text" asp-for="NumeroTarjeta" asp-controller="Productos" id="cc-number" class="form-control" />
                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Se requiere número de la tarjeta
                                    </font>
                                </font>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label for="cc-expiration" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Vencimiento</font></font></label>
                            <input type="text" asp-for="Vencimiento" asp-controller="Productos" id="cc-number" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Fecha de vencimiento requerida
                                    </font>
                                </font>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label for="cc-cvv" class="form-label"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">CVV</font></font></label>
                            <input type="text" asp-for="CVV" asp-controller="Productos" id="cc-number" class="form-control" />

                            <div class="invalid-feedback">
                                <font style="vertical-align: inherit;">
                                    <font style="vertical-align: inherit;">
                                        Se requiere código de seguridad
                                    </font>
                                </font>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">


                    <button type="submit" asp-controller="Productos" asp-action="CompraRealizada" class="w-100 btn btn-success btn-lg">Realizar compra</button>
                    <br />
                        <hr class="my-4">

                    <button type="submit" asp-controller="Productos" asp-action="mostrarCompra" class="w-100 btn btn-success btn-lg">Ver historial de compras</button>


                </form>
            </div>
        </div>
    </main>



</body>